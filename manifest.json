{
  "manifest_version": 3,
  "name": "Automatically ends stream",
  "version": "1.0.0",
  "description": "Developed by Ant Software",
  "author": "Ant Software",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "nativeMessaging"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/active/icon16.png",
    "64": "images/active/icon64.png",
    "128": "images/active/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://studio.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
